<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <IsPackable>true</IsPackable>

    <PackageId>BelousLib.GuidExtension</PackageId>
    <Version>1.0.1</Version>
    <Authors>Denis Belous</Authors>
    <Description>This library helps convert GUIDs to int/long/short and vice versa</Description>
    <PackageProjectUrl>https://github.com/dbelouslv/BelousLib.GuidExtension</PackageProjectUrl>
    <RepositoryUrl>https://github.com/dbelouslv/BelousLib.GuidExtension</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>dotnet guid extension</PackageTags>
    <PackageReadmeFile>NUGET.md</PackageReadmeFile>
    <PackageReleaseNotes>
      - Rewrited the library main logic
      - Updated README.md file
      - Added new unit tests
      - Added the ability to convert from Double to GUID
      - Added the ability to convert from Float to GUID
      - Added the ability to convert from GUID to Float
      - Added the ability to convert from GUID to Double
      - Added the ability tp fill guid second part with random HEX-sybmols
    </PackageReleaseNotes>

    <AnalysisLevel>latest-all</AnalysisLevel>
    <Title>$(AssemblyName)</Title>
    <Company></Company>
    <Copyright></Copyright>
    <DebugType>embedded</DebugType>
    <AssemblyVersion>1.0.1</AssemblyVersion>
    <FileVersion>$(AssemblyVersion)</FileVersion>
    <Version>$(AssemblyVersion)</Version>

    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <None Include="docs\NUGET.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>